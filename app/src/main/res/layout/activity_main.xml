<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.home.earoevgen.tqforsoftcenterprev.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_view_type"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="@string/activity_main_btn_view_type"
            android:onClick="onClickViewTypeBtn"/>

        <Button
            android:id="@+id/btn_view_card"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="@string/activity_main_btn_view_card"
            android:onClick="onClickViewCartBtn"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
