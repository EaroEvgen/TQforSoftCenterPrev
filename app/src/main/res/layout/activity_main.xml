<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.home.earoevgen.tqforsoftcenterprev.MainActivity">

    <!--
    Задавать размеры жестко - плохая идея в большинстве случаев - разных Android-устройств существует
    великое множество с разными размерами экрана.

    Вложение LinearLayout внутрь ConstraintLayout излишне.
    -->
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:gravity="center"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/btn_view_type"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="@string/activity_main_btn_view_type"
            android:onClick="onClickViewTypeBtn"/>
        <!--
        В общем случае не рекомендуется осуществлять привязку событий (onClick) непосредственно из
        layout, поскольку ограничивает повторное использование, а в случае с Fragment и вовсе работать
        не будет.
        Рекомендуется делать непосредственно в коде по setOnClickListener
        -->
        <Button
            android:id="@+id/btn_view_card"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="@string/activity_main_btn_view_card"
            android:onClick="onClickViewCartBtn"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
